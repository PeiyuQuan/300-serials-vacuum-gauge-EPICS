record(ai,"$(P)readpressure")
	{
		field(DTYP,"stream")
		field(INP,"@300s_gauge.proto readpressure $(PORT)")
		field(EGU,"Torr")
		field(PREC,"2")
		field(HOPR, "1000")
		field(LOPR, "0.0001")
		field(SCAN,"1 second")
	}

